<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	xmlns:tools = "http://schemas.android.com/tools"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	android:orientation = "vertical"
	tools:context = ".MainActivity">
	
	<!-- Header ViewGroup -->
	<RelativeLayout
		android:layout_width = "match_parent"
		android:layout_height = "0dp"
		android:layout_weight = "20">
		
		<ImageView
			android:layout_width = "match_parent"
			android:layout_height = "match_parent"
			android:background = "#F2F7FF"
			android:scaleType = "centerInside"
			android:src = "@drawable/udacity_elearning" />
		
		<TextView
			style = "@style/HeaderTextView"
			android:text = "Udacity" />
		
		<TextView
			style = "@style/HeaderTextView"
			android:gravity = "right"
			android:text = "Anytime"
			android:textColor = "#2C3C49" />
		
		<TextView
			style = "@style/HeaderTextView"
			android:gravity = "bottom"
			android:text = "Anywhere"
			android:textColor = "#2C3C49" />
		
		<TextView
			style = "@style/HeaderTextView"
			android:gravity = "bottom|right"
			android:text = "Learning" />
	
	</RelativeLayout>
	
	<!-- Middle and Footer ViewGroup -->
	<LinearLayout
		android:layout_width = "match_parent"
		android:layout_height = "0dp"
		android:layout_weight = "45"
		android:orientation = "vertical">
		
		<!-- Middle ViewGroup and Contact Information -->
		<LinearLayout
			android:layout_width = "match_parent"
			android:layout_height = "0dp"
			android:layout_weight = "30"
			android:background = "#2C3C49">
			
			<ImageView
				android:layout_width = "0dp"
				android:layout_height = "match_parent"
				android:layout_weight = "1"
				android:scaleType = "centerCrop"
				android:src = "@drawable/udacity_new_logo" />
			
			<!-- All Information ViewGroup -->
			<LinearLayout
				android:layout_width = "0dp"
				android:layout_height = "match_parent"
				android:layout_weight = "6"
				android:orientation = "vertical">
				
				<!-- About Udacity ViewGroup -->
				<LinearLayout style = "@style/MiddleLinearLayout">
					
					<ImageView
						style = "@style/MiddleImageView"
						android:padding = "7.5dp"
						android:scaleType = "centerCrop"
						android:src = "@drawable/udacity_icon" />
					
					<TextView
						style = "@style/MiddleTextView"
						android:text = "Udacity is where lifelong learners come to learn the skills they need, to land the jobs they want, to build the lives they deserve." />
				
				</LinearLayout>
				
				<!-- Udacity Phone ViewGroup -->
				<LinearLayout style = "@style/MiddleLinearLayout">
					
					<ImageView
						style = "@style/MiddleImageView"
						android:src = "@drawable/phone_icon" />
					
					<TextView
						style = "@style/MiddleTextView"
						android:text = "650-555-5555" />
				
				</LinearLayout>
				
				<!-- Udacity Support ViewGroup -->
				<LinearLayout style = "@style/MiddleLinearLayout">
					
					<ImageView
						style = "@style/MiddleImageView"
						android:src = "@drawable/support_icon" />
					
					<TextView
						style = "@style/MiddleTextView"
						android:text = "support@udacity.com" />
				
				</LinearLayout>
				
				<!-- Udacity Website ViewGroup -->
				<LinearLayout style = "@style/MiddleLinearLayout">
					
					<ImageView
						style = "@style/MiddleImageView"
						android:src = "@drawable/link_icon" />
					
					<TextView
						style = "@style/MiddleTextView"
						android:text = "https://www.udacity.com" />
				
				</LinearLayout>
				
				<!-- Udacity Address ViewGroup -->
				<LinearLayout style = "@style/MiddleLinearLayout">
					
					<ImageView
						style = "@style/MiddleImageView"
						android:src = "@drawable/address_icon" />
					
					<TextView
						style = "@style/MiddleTextView"
						android:text = "2465 Latham St, Mountain View, CA 94043" />
				
				</LinearLayout>
			
			</LinearLayout>
		
		</LinearLayout>
		
		<!-- Footer ViewGroup and Nanodegree Programs -->
		<LinearLayout
			android:layout_width = "match_parent"
			android:layout_height = "0dp"
			android:layout_weight = "15"
			android:orientation = "vertical">
			
			<TextView
				style = "@style/FooterTextView"
				android:layout_width = "match_parent"
				android:layout_height = "0dp"
				android:layout_weight = "2"
				android:background = "#02CCBA"
				android:text = "Some of Nanodegree Programs"
				android:textAllCaps = "false" />
			
			<LinearLayout
				android:layout_width = "match_parent"
				android:layout_height = "0dp"
				android:layout_weight = "2">
				
				<TextView
					style = "@style/FooterTextView"
					android:layout_width = "0dp"
					android:layout_height = "match_parent"
					android:layout_weight = "1"
					android:background = "#15C26B"
					android:text = "Featured Programs" />
				
				<TextView
					style = "@style/FooterTextView"
					android:layout_width = "0dp"
					android:layout_height = "match_parent"
					android:layout_weight = "1"
					android:background = "#02B3E4"
					android:text = "Only at Udacity" />
			
			</LinearLayout>
			
			<LinearLayout
				android:layout_width = "match_parent"
				android:layout_height = "0dp"
				android:layout_weight = "11"
				android:background = "#DAE1E7">
				
				<LinearLayout style = "@style/BottomFooterLinearLayout">
					
					<ImageView
						style = "@style/BottomFooterImageView"
						android:src = "@drawable/android_basics" />
					
					<TextView
						style = "@style/BottomFooterTextView"
						android:text = "Android Basics" />
				
				</LinearLayout>
				
				<LinearLayout style = "@style/BottomFooterLinearLayout">
					
					<ImageView
						style = "@style/BottomFooterImageView"
						android:src = "@drawable/intro_to_programming" />
					
					<TextView
						style = "@style/BottomFooterTextView"
						android:text = "Intro to Programming" />
				
				</LinearLayout>
				
				<LinearLayout style = "@style/BottomFooterLinearLayout">
					
					<ImageView
						style = "@style/BottomFooterImageView"
						android:src = "@drawable/artificial_intelligence" />
					
					<TextView
						style = "@style/BottomFooterTextView"
						android:text = "Artificial Intelligence" />
				
				</LinearLayout>
				
				<LinearLayout style = "@style/BottomFooterLinearLayout">
					
					<ImageView
						style = "@style/BottomFooterImageView"
						android:src = "@drawable/self_driving_cars" />
					
					<TextView
						style = "@style/BottomFooterTextView"
						android:text = "Self-Driving Car Engineer" />
				
				</LinearLayout>
			
			</LinearLayout>
		
		</LinearLayout>
	
	</LinearLayout>

</LinearLayout>